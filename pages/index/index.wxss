/**index.wxss**/
.top-banner{
  background:linear-gradient(to bottom,#3a4a5a 50%, #f9f9f9 50%);
  width:750rpx;
}
.b-cont{
  background-color:#fff;
  width: 680rpx;
  margin: 0rpx auto;
  box-shadow: 1rpx 8rpx 10rpx #e2e2e2;
  border-radius: 10rpx;
  margin-top:20rpx;
}
.b-money{
  text-align:center;
  padding-top:40rpx;
}
.b-money img{
  background-color:red;
  border-radius: 50%;
  border:1px solid red;
  width:100rpx;
  height:100rpx;
  display:inline-block;
}
.b-money p{
  font-size:80rpx;
  font-family: "DIN Condensed";
  color:#3a4a5a;
  padding-left:20rpx;
}
.b-cont ul{
  display: flex;
  justify-content: space-between;
  margin:40rpx 50rpx;
}
.b-cont ul li{
  font-size:24rpx;
  color: #7a7a7a;
  margin-bottom:30rpx;
}
.b-cont ul li p{
  font-size:36rpx;
  color:#01cf99;
  display: block;
}
.b-cont ul li p span{
  font-size:24rpx;
}